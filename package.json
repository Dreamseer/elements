{
  "name": "@dreamseer/elements",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/core": "^10.0.6",
    "@emotion/styled": "^10.0.6",
    "@storybook/addon-actions": "^4.1.7",
    "@storybook/addon-knobs": "^4.1.7",
    "@storybook/addon-links": "^4.1.7",
    "@storybook/addons": "^4.1.7",
    "@storybook/react": "^4.1.7",
    "date-fns": "^2.0.0-alpha.27",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-scripts": "2.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "babel-loader": "8.0.4",
    "babel-plugin-emotion": "^10.0.6",
    "babel-plugin-istanbul": "^5.1.0",
    "coveralls": "^3.0.2",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.5.0",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "flow-bin": "^0.91.0",
    "flow-coverage-report": "^0.6.0",
    "husky": "^1.3.1",
    "jest-emotion": "^10.0.6",
    "lerna": "^3.10.5",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react-test-renderer": "^16.6.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "coverage": "react-scripts test --silent --coverage",
    "coveralls": "react-scripts test --silent --coverage --coverageReporters=text-lcov | coveralls",
    "flow": "flow",
    "flow:coverage": "flow-coverage-report -i 'src/**/*.js' -i 'src/**/*.jsx' -x 'src/**/*.test.*'",
    "lint": "eslint --fix --max-warnings 0 ./src/**/*.{js,jsx}",
    "storybook:start": "start-storybook -p 9009 -s public",
    "storybook:build": "build-storybook -s public"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "react-app",
      "airbnb",
      "plugin:flowtype/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "prettier/flowtype",
      "prettier/react"
    ],
    "plugins": [
      "flowtype",
      "react",
      "jsx-a11y",
      "prettier"
    ],
    "rules": {
      "jsx-a11y/label-has-for": [
        2,
        {
          "required": {
            "some": [
              "nesting",
              "id"
            ]
          }
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ],
      "react/require-default-props": "off"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text"
    ],
    "snapshotSerializers": [
      "jest-emotion"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "last 2 versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}

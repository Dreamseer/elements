{
  "name": "@dreamseer/elements",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@storybook/addon-actions": "^5.1.8",
    "@storybook/addon-knobs": "^5.1.3",
    "@storybook/addon-links": "^5.1.3",
    "@storybook/addons": "^5.1.3",
    "@storybook/react": "^5.1.3",
    "date-fns": "^2.0.0-alpha.27",
    "jest-styled-components": "^6.3.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "styled-components": "^4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@testing-library/react": "^8.0.1",
    "@testing-library/user-event": "^4.1.0",
    "babel-loader": "8.0.5",
    "babel-plugin-istanbul": "^5.1.4",
    "babel-plugin-styled-components": "^1.10.0",
    "coveralls": "^3.0.4",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-flowtype": "^3.10.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "flow-bin": "^0.101.0",
    "flow-coverage-report": "^0.6.0",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.8.6",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "coverage": "react-scripts test --silent --coverage",
    "coveralls": "react-scripts test --silent --coverage --coverageReporters=text-lcov | coveralls",
    "flow": "flow",
    "flow:coverage": "flow-coverage-report -i 'src/**/*.js' -i 'src/**/*.jsx' -x 'src/**/*.test.*'",
    "lint": "yarn run lint:css && yarn run lint:js",
    "lint:css": "stylelint --max-warnings 0 ./src/**/*.{js,jsx}",
    "lint:js": "eslint --fix --max-warnings 0 ./src/**/*.{js,jsx}",
    "storybook:start": "start-storybook -p 9009 -s public",
    "storybook:build": "build-storybook -c .storybook -o docs"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "react-app",
      "airbnb",
      "plugin:flowtype/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "prettier/flowtype",
      "prettier/react"
    ],
    "plugins": [
      "flowtype",
      "react",
      "jsx-a11y",
      "prettier"
    ],
    "rules": {
      "jsx-a11y/label-has-for": [
        2,
        {
          "required": {
            "some": [
              "nesting",
              "id"
            ]
          }
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ],
      "react/require-default-props": "off"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-styled-components"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "last 2 versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "greenkeeper": {
    "ignore": [
      "babel-loader"
    ]
  }
}
